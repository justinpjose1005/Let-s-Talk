<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justinpjose.chatroom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PLetsChatApp">
        <activity android:name="com.justinpjose.chatroom.AddRoomActivity" />
        <activity
            android:name="com.justinpjose.chatroom.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.justinpjose.chatroom.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.justinpjose.chatroom.RegisterActivity"
            android:label="Register"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.justinpjose.chatroom.RoomActivity"
            android:label="Chat Room"
            android:screenOrientation="portrait" />
    </application>

</manifest>